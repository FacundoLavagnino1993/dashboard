table(class="table table-hover")
    thead
        tr
            th(ng-click="$ctrl.orderBy('id')") Id <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('status')") Estado de tarea <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('channel')") Canal <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('country')") Pais <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('agent')") Agente <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('dateCreation')") Fecha de creacion <i class="fa fa-caret-down" aria-hidden="true"></i>
            th(ng-click="$ctrl.orderBy('type')" ) Tipo <i class="fa fa-caret-down" aria-hidden="true"></i>
    tbody
        tr.item-tasks(ng-repeat="item in $ctrl.works.tasks |filterById:($ctrl.filters._id) track by $index")
            td {{$ctrl.itemIsEmpty(item.cart.cart_id)}}
                span(ng-click="$ctrl.itemReserve({ $event:{reserve:{cart_id:item.cart.cart_id,user_id:'bot'}}})") Reservar
            td {{$ctrl.itemIsEmpty(item.cart.status)}}
            td {{$ctrl.itemIsEmpty(item.cart.source.channel)}}
            td {{$ctrl.itemIsEmpty(item.cart.source.country)}}
            td {{$ctrl.itemIsEmpty(item.state.user_id)}}
            td {{$ctrl.itemIsEmpty(item.cart.creation_date)}}
            td {{$ctrl.itemIsEmpty(item.state.type)}}
                span#timer(ng-if="item.state.type=='SNOOZED'")
ul.pagination
    li
        a(href="#") 1
    li
        a(href="#") 2
    li
        a(href="#") 3
